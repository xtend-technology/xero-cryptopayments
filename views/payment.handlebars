                     <form action="/payment" method="post">
                  <div class="form-group row">
                  <label for="inv" class="col-sm-2 col-form-label">Invoice number</label>
                  <div class="col-sm-6">
                  <input 
                         id="inv"
                         name="inv"
                         type="text"
                         class="form-control" 
                         value={{invoice_number}}>
                         </div>
                         
                  </div>
                  <div class="form-group row">
                  <label for="coin" class="col-sm-2 col-form-label">Coin</label>
                         <div class="col-sm-6">
                         <select id="coin" name="coin">
                            {{#each coins}}
                            <option value={{this}}>{{this}}</option>
                            {{/each}}
                         </select>
                         </div>
                         </div>
                         <div class="form-group row">
                  <label for="amountAUD" class="col-sm-2 col-form-label">Amount in AUD (incl GST):</label>
                         <div class="col-sm-6">
                         <input 
                         id="amountAUD"
                         name="amount"
                         type="number"
                         class="form-control" 
                         value={{amount}}
                         >
                         </div>
                         </div>
                        <div class="form-group row">
                  <label for="email" class="col-sm-2 col-form-label">Your Email</label>
                         <div class="col-sm-6">
                         <input 
                         id="email"
                         name="email"
                         type="text"
                         class="form-control" 
                         >
                         </div>
                         </div>
                         <button type="submit" class="btn btn-primary mb-2">Submit payment details</button>
              </form> 
              
  </div>
